# Seleto Industrial SDR Agent - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Application Configuration
# ============================================
APP_NAME=Seleto Industrial SDR Agent
APP_ENV=development
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# ============================================
# OpenAI / LLM Configuration
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# PipeRun CRM Configuration
# ============================================
PIPERUN_API_URL=https://api.pipe.run/v1
PIPERUN_API_TOKEN=your_piperun_api_token_here
PIPERUN_PIPELINE_ID=your_pipeline_id_here
PIPERUN_STAGE_ID=your_stage_id_here
PIPERUN_ORIGIN_ID=your_origin_id_here

# ============================================
# WhatsApp Provider Configuration
# ============================================
# Generic WhatsApp API (if not using Z-API)
WHATSAPP_API_URL=https://api.whatsapp-provider.com
WHATSAPP_API_TOKEN=your_whatsapp_api_token_here
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret_here

# Z-API Specific Configuration (for TECH-005, TECH-006, TECH-007)
# Used when integrating with Z-API provider
ZAPI_INSTANCE_ID=your_zapi_instance_id_here
ZAPI_INSTANCE_TOKEN=your_zapi_instance_token_here
ZAPI_CLIENT_TOKEN=your_zapi_client_token_here
ZAPI_WEBHOOK_SECRET=your_zapi_webhook_secret_here

# ============================================
# Chatwoot Configuration
# ============================================
CHATWOOT_API_URL=https://your-chatwoot-instance.com
CHATWOOT_API_TOKEN=your_chatwoot_api_token_here
CHATWOOT_ACCOUNT_ID=your_chatwoot_account_id_here
CHATWOOT_INBOX_ID=your_chatwoot_inbox_id_here

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
